<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="ui5.starwarsecommerce.controller.Account"
>
    <core:Fragment
        fragmentName="ui5.starwarsecommerce.fragments.Toolbar"
        type="XML"
    />
    <Page showHeader="false">
        <content>
            <!-- PERFIL DEL USUARIO -->
            <VBox class="sapUiSmallMargin sapUiAlignCenter sapUiContentPadding">
                <HBox
                    alignItems="Center"
                    justifyContent="Center"
                >
                    <Image
                        src="{userModel>/avatar}"
                        width="5rem"
                        class="sapUiSmallMarginEnd"
                    />
                    <VBox>
                        <Text
                            text="{userModel>/name}"
                            class="sapUiTinyMarginBottom"
                        />
                        <Text
                            text="{userModel>/username}"
                            class="sapUiTinyMarginBottom"
                        />
                        <Text text="{userModel>/mail}" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- FAVORITOS -->
            <Panel
                headerText="⭐ Favoritos"
                expandable="true"
                expanded="true"
                class="sapUiSmallMarginBottom"
            >
                <List
                    items="{userModel>/favorites}"
                    id="favoritesList"
                >
                    <StandardListItem
                        title="{userModel>name}"
                        description="{userModel>price}"
                    />
                </List>
            </Panel>

            <!-- COMPRAS RECIENTES -->
            <Panel
                headerText="🛍️ Compras Recientes"
                expandable="true"
                expanded="true"
            >
                <VBox items="{userModel>/purchaseHistory}">
                    <items>
                        <VBox>
                            <!-- Header de la compra -->

                            <!-- Tabla de productos -->
                            <Table
                                inset="false"
                                items="{userModel>items}"
                                width="100%"
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <Title
                                            text="Compra: {userModel>date}"
                                            level="H5"
                                        />
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column width="100%">
                                        <Text text="Producto" />
                                    </Column>
                                    <Column
                                        width="100%"
                                        hAlign="Center"
                                    >
                                        <Text text="Cantidad" />
                                    </Column>
                                    <Column
                                        width="100%"
                                        hAlign="End"
                                    >
                                        <Text text="Precio" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <ObjectIdentifier
                                                title="{userModel>name}"
                                            />
                                            <Text text="{userModel>quantity}" />
                                            <ObjectNumber
                                                number="{userModel>price}"
                                                unit="$"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <HBox justifyContent="End">
                                <Text text="Total: {userModel>total} $" />
                            </HBox>
                        </VBox>
                    </items>
                </VBox>
            </Panel>
        </content>
    </Page>
</mvc:View>
