<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="{i18n>filterDialogTitle}"
        class="sapUiContentPadding"
    >
        <VBox class="sapUiSmallMarginTop">
            <!-- Ordenar por Precio -->
            <CheckBox
                id="priceCheck"
                text="{i18n>sortByPrice}"
                selected="{products>/filterByPrice}"
                select=".onPriceSelect"
            />
            <Select
                id="priceSelect"
                enabled="{products>/filterByPrice}"
                selectedKey="{products>/priceSortOrder}"
                width="100%"
            >
                <items>
                    <core:Item key="empty" text="" />
                    <core:Item key="asc" text="{i18n>asc}" />
                    <core:Item key="desc" text="{i18n>desc}" />
                </items>
            </Select>

            <!-- Ordenar por Rating -->
            <CheckBox
                id="ratingCheck"
                text="{i18n>sortByRating}"
                selected="{products>/filterByRating}"
                select=".onRatingSelect"
                class="sapUiSmallMarginTop"
            />
            <Select
                id="ratingSelect"
                enabled="{products>/filterByRating}"
                selectedKey="{products>/ratingSortOrder}"
                width="100%"
            >
                <items>
                    <core:Item key="empty" text="" />
                    <core:Item key="asc" text="{i18n>asc}" />
                    <core:Item key="desc" text="{i18n>desc}" />
                </items>
            </Select>
        </VBox>

        <beginButton>
            <Button
                text="{i18n>ok}"
                type="Emphasized"
                press=".onApplyFilters"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press=".onCancelFilters"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
