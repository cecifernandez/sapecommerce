<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="{i18n>checkoutTitle}"
        class="sapUiResponsivePadding"
        stretch="{device>/system/phone}"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox
                    alignItems="Center"
                    class="sapUiTinyMarginTop"
                >
                    <core:Icon
                        src="sap-icon://customer"
                        class="sapUiSmallMarginEnd"
                    />
                    <Label
                        text="{i18n>name}"
                        required="true"
                    />
                </HBox>
                <Input
                    value="{checkoutModel>/name}"
                    placeholder="{i18n>namePlaceholder}"
                />
                <HBox
                    alignItems="Center"
                    class="sapUiTinyMarginTop"
                >
                    <core:Icon
                        src="sap-icon://arobase"
                        class="sapUiSmallMarginEnd"
                    />
                    <Label
                        text="{i18n>email}"
                        required="true"
                    />
                </HBox>

                <Input
                    value="{checkoutModel>/email}"
                    placeholder="{i18n>emailPlaceholder}"
                    type="Email"
                />

                <HBox
                    alignItems="Center"
                    class="sapUiTinyMarginTop"
                >
                    <core:Icon
                        src="sap-icon://map"
                        class="sapUiSmallMarginEnd"
                    />
                    <Label
                        text="{i18n>address}"
                        required="true"
                    />
                </HBox>
                <Input
                    value="{checkoutModel>/address}"
                    placeholder="{i18n>addressPlaceholder}"
                />

                <HBox
                    alignItems="Center"
                    class="sapUiTinyMarginTop"
                >
                    <core:Icon
                        src="sap-icon://credit-card"
                        class="sapUiSmallMarginEnd"
                    />
                    <Label
                        text="{i18n>card}"
                        required="true"
                    />
                </HBox>
                <Input
                    value="{checkoutModel>/card}"
                    placeholder="{i18n>cardPlaceholder}"
                    type="Number"
                />

                <HBox
                    alignItems="Center"
                    class="sapUiTinyMarginTop"
                >
                    <core:Icon
                        src="sap-icon://business-card"
                        class="sapUiSmallMarginEnd"
                    />
                    <Label
                        text="{i18n>dni}"
                        required="true"
                    />
                </HBox>
                <Input
                    value="{checkoutModel>/dni}"
                    placeholder="{i18n>dniPlaceholder}"
                    type="Number"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>confirmPurchase}"
                press=".onConfirmCheckout"
                type="Emphasized"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press=".onCancelCheckout"
                type="Transparent"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
