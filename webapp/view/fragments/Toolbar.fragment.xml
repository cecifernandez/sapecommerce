<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Toolbar
        id="toolbar_fragment"
        width="90%"
        class="toolbar sapUiResponsiveMargin"
    >
        <Button
            id="back_btn"
            icon="sap-icon://nav-back"
            press=".onNavBack"
            class="btn"
            visible="{= ${ui>/showNavBack} }"
        />
        <Button
            id="home_btn"
            text="{i18n>home}"
            press=".onNavToHome"
            class="btn"
            icon="sap-icon://home"
        />
        <Button
            id="products_btn"
            text="{i18n>products}"
            press=".onNavToProducts"
            class="btn btn-products"
            icon="sap-icon://product"
        />
        <Button
            id="account_btn"
            text="{i18n>account}"
            press=".onNavToAccount"
            class="btn"
            icon="sap-icon://person-placeholder"
        />
        <Button
            id="cart_btn"
            text="{i18n>cart}"
            press=".openCart"
            class="btn"
            icon="{= ${productModel>/cart}.length === 0 ? 'sap-icon://cart' : 'sap-icon://cart-full' }"
        />
        <Button
            id="search_btn"
            icon="sap-icon://navigation-right-arrow"
            press=".onNavForward"
            class="btn"
        />
    </Toolbar>
</core:FragmentDefinition>
