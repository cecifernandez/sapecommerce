<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Bar
        design="Footer"
        id="footerBar"
        class="sapUiResponsiveMargin footerToolbar"
    >
        <contentMiddle>
            <HBox
                id="footerContentBox"
                justifyContent="Center"
                alignItems="Center"
                alignContent="Center"
            >
                <Image
                    src="/assets/imgs/geonosis-logo.png"
                    width="100px"
                    class="sapUiTinyMarginEnd"
                    id="footerLogo"
                    alt="{i18n>footerLogoAlt}"
                    tooltip="{i18n>footerLogoTooltip}"
                />
                <Text
                    text="{i18n>footerText}"
                    class="footerText"
                    wrapping="true"
                    id="footerText"
                />
            </HBox>
        </contentMiddle>
    </Bar>
</core:FragmentDefinition>
